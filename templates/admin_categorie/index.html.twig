{% extends 'base-admin.html.twig' %}

{% block title %}Liste de categories{% endblock %}

{% block body %}
<div class="row mx-5 ">
    <h1 class="my-4">Categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>ImageName</th>
                <th>UpdatedAt</th>
                {# <th>ImageSize</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.Nom }}</td>
                <td><img src="{{asset('images/categories/' ~ categorie.imageName)}}" alt="{{ categorie.nom }}" class="img-list-admin"></td>    
                {# <td>{{ categorie.imageName }}</td> #}
                <td>{{ categorie.updatedAt ? categorie.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                {# <td>{{ categorie.imageSize }}</td> #}
                <td>
                    <a href="{{ path('admin_categorie_show', {'id': categorie.id}) }}">show</a>
                    <a href="{{ path('admin_categorie_edit', {'id': categorie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_categorie_new') }}" class="btn btn-sm btn-dark col-md-2">Ajouter</a>
</div>
{% endblock %}
