{% extends 'base.html.twig' %}

{% block title %}Mon panier - Safar beauty {% endblock %}

{% block body %}
 <!-- Page Add Section Begin -->
    <section class="page-add cart-page-add">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="page-breadcrumb">
                        <h2>Mon Panier<span>.</span></h2>
                        <a href="#">accueil</a>
                        <a href="#">Vetements</a>
                        <a class="active" href="#">Home</a>
                    </div>
                </div>
                <div class="col-lg-8">
                    <img src="{{ asset('images/headers/add.jpg')}}" alt="">
                </div>
            </div>
        </div>
    </section>
    <!-- Page Add Section End -->
  <!-- Cart Page Section Begin -->
    <div class="cart-page">
        <div class="container">
            <div class="cart-table">
              {% if cart|length > 0 %}
                <table>
                    <thead>
                        <tr>
                            <th class="product-h">Produit</th>
                            {# <th>Nom</th> #}
                            <th>Prix</th>
                            <th class="quan">Qté</th>
                            <th>Total</th>
                            <th></th>
                            
                        </tr>
                    </thead>
                    <tbody>
                      {% set total = null %}
                      {% for produit in cart %}
                        <tr>
                            <td class="product-col">
                                <img src="images/produits/{{produit.produit.imageName}}" height="30px" alt="{{produit.produit.nom}}">
                                <div class="p-title">
                                    <h5>{{ produit.produit.nom }}</h5>
                                </div>
                            </td>
                            <td class="price-col">{{ (produit.produit.prix / 100)|number_format(2, ',', '.')}} €</td>
                            {# class quantity-col #}
                            <td class="primary-btn pc-btn">
                              <a href="{{ path ('decrease_to_cart', {'id' : produit.produit.id}) }}"> 
                                <img src="{{ asset ('images/moins.png')}}" style="max-height:8px;width:auto;" alt="">
                              </a>
                              {{ produit.quantity }}
                              <a href="{{ path ('add_to_cart', {'id' : produit.produit.id}) }}"> 
                                  <img src="{{ asset ('images/plus.png')}}" style="max-height:8px;width:auto;" alt="">
                              </a>
                                {# <div class="pro-qty">
                                    {# <input type="text" value="1"> 
                                </div> #}
                            </td>
                            <td class="total">{{ ((produit.produit.prix * produit.quantity) / 100)|number_format(2, ',', '.')}} €</td>
                            <td class="product-close">x</td>
                        </tr>
                    </tbody>
                      {% endfor %}
                </table>
            </div>
            {# <div class="cart-btn">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="coupon-input">
                            <input type="text" placeholder="Enter cupone code">
                        </div>
                    </div>
                    <div class="col-lg-5 offset-lg-1 text-left text-lg-right">
                        <div class="site-btn clear-btn">Clear Cart</div>
                        <div class="site-btn update-btn">Update Cart</div>
                    </div>
                </div>
            </div>
        </div>
       #}
    </div>    
        <div class="shopping-method">
            <div class="container">
                <div class="row">
                        <div class="total-info">
                            <div class="total-table">
                            </div> 
                            <div class="row">
                                <div class="col-lg-12 text-right">
                                    <a href="{{ path('commande')}}"  class="primary-btn chechout-btn">Valider mon panier</a>
                                </div>
                            </div>
                            {% else %}
                              <p class="text-center"><b> Votre panier est vide</b></p>
                              <hr>
                        {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Cart Page Section End -->
{% endblock %}
