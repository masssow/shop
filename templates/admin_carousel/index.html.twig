{% extends 'base.html.twig' %}

{% block title %}Carousel index{% endblock %}

{% block body %}
    <h1>Carousel index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UpdatedAt</th>
                <th>Title</th>
                <th>Image</th>
                <th>Subtitle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carousel in carousels %}
            <tr>
                <td>{{ carousel.id }}</td>
                <td>{{ carousel.updatedAt ? carousel.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ carousel.title }}</td>
                <td><img src="{{asset('images/carousel/' ~ carousel.imageName)}}" alt="{{ carousel.title }}" class="img-list-admin"></td>    
                <td>{{ carousel.subtitle }}</td>
                {# <td>{{ carousel.buttom }}</td> #}
                <td>
                    <a href="{{ path('app_admin_carousel_show', {'id': carousel.id}) }}">show</a>
                    <a href="{{ path('app_admin_carousel_edit', {'id': carousel.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_carousel_new') }}">Create new</a>
{% endblock %}
